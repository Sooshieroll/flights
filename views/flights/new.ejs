<body>

    <%- include('../features/navbar.ejs') %>
        <br>
        <%if (didSearchFail) { %>
            <div class="no-results"> No results found based on search </div>
            <% } %>
                <form class="new" action="/flights/new" method="POST">
                    <div
                        class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                        <label for="origin">Choose Origin Location: </label>
                        <br>
                        <input type="text" id="origin" name="origin" placeholder="Las Vegas" />
                        <br>
                    </div>

                    <br>


                    <div
                        class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                        <label for="destination">Choose Destination Location: </label>
                        <br>
                        <input type="text" id="destination" name="destination" placeholder="Los Angeles" />
                        <br>
                    </div>
                    <br>

                    <div
                        class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                        <label for="departureDate">Choose Departure Date: </label>
                        <br>
                        <input type="date" id="departureDate" name="departureDate" />
                        <br>
                    </div>
                    <br>

                    <div
                        class="d-flex align-items-center flex-fill ms-sm-1 my-sm-0 my-4 border-bottom position-relative">
                        <label for="returnDate">Choose Return Date: </label>
                        <br>
                        <input type="date" id="returnDate" name="returnDate" />
                        <br>
                    </div>
                    <br>

                    <button>Search</button>

                </form>
</body>
